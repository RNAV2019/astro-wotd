---
// Card Component
export interface Props {
	text: string;
}

const { text } = Astro.props;
---

<div
	class='rounded-2xl bg-gradient-to-r from-purple-600 to-pink-600 p-1 shadow-xl text-white'
>
	<div class='block rounded-xl bg-slate-950 p-4 sm:p-6 lg:p-8 w-full h-full'>
		<h3 class='text-xl font-bold sm:text-2xl'>Example</h3>
		<p class='mt-2 text-lg'>{text}</p>
	</div>
</div>
